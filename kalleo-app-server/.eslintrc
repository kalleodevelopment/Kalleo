{
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "experimentalDecorators": true
    }
  },
  "plugins": [
    "meteor",
    "react"
  ],
  "rules": {
    "array-callback-return": 1,
    "func-names": 0,
    "object-curly-newline": 0,
    "react/jsx-filename-extension": 0
  },
  "settings": {
    "import/core-modules": [
      "meteor",
      "meteor/apollo",
      "meteor/email",
      "meteor/meteor",
      "meteor/mongo",
      "meteor/random",
      "meteor/themeteorchef:bert",
      "meteor/webapp"
    ]
  },
  "globals": {
    "alert": true,
    "document": true,
    "localStorage": true,
    "window": true
  }
}
